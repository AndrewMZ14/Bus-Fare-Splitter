<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".UI.AddTripActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="24dp">

        <!-- HEADER -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            android:text="Add Trip"
            android:textColor="#FF1744"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- TRIP DETAILS CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:background="#1E1E1E"
            android:padding="16dp"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="8dp"
            android:clipChildren="false">

            <!-- Start City -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Start"
                app:boxStrokeColor="#FFFFFF"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#1E1E1E"
                app:hintTextColor="#FF1744"
                app:boxStrokeErrorColor="#FF1744">

                <AutoCompleteTextView
                    android:id="@+id/actvStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingVertical="16dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:inputType="none"
                    android:popupBackground="#2C2C2C"
                    android:text="Select start city" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Destination City -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Destination"
                app:boxStrokeColor="#FFFFFF"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#1E1E1E"
                app:hintTextColor="#FF1744"
                app:boxStrokeErrorColor="#FF1744">

                <AutoCompleteTextView
                    android:id="@+id/actvDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingVertical="16dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:inputType="none"
                    android:popupBackground="#2C2C2C"
                    android:text="Select destination" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Trip Date -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Date"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="#FF3B30"
                app:endIconMode="custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none"
                    android:textColor="#FFFFFF"
                    android:text="Oct 21, 2025" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Total Cost"
                app:prefixText="K"
                app:prefixTextColor="#FF3B30"
                app:boxStrokeColor="#FFFFFF"
                app:boxBackgroundColor="#1E1E1E"
                app:boxStrokeWidthFocused="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTotalCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="#FFFFFF"
                    android:hint="" /> <!-- ðŸ‘ˆ remove inner hint -->
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- PASSENGER HEADER -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="16dp"
            android:text="Passengers"
            android:textColor="#FF1744"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- PASSENGER LIST -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- âœ… FIXED: RecyclerView now expands fully and shows passengers -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPassengers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_passenger"
                tools:itemCount="2" />

            <!-- ADD PASSENGER BUTTON -->
            <TextView
                android:id="@+id/tvAddPassenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Add Passenger"
                android:textColor="#FF1744"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_add_circle_outline"
                app:drawableTint="#FF3B30" />
        </LinearLayout>

        <!-- CREATE TRIP BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:minHeight="56dp"
            android:text="CALCULATE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#FF1744"
            app:cornerRadius="12dp"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart" />

    </LinearLayout>
</ScrollView>

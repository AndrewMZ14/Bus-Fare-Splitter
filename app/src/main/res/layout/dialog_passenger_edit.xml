<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#121212">

    <!-- HEADER TITLE -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Passenger"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF1744"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- PASSENGER NAME -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Passenger Name"
        app:boxStrokeColor="#FF1744"
        app:hintTextColor="#FFFFFF"
        app:startIconDrawable="@drawable/ic_person"
        app:startIconTint="#FF1744"
        app:boxBackgroundColor="#1E1E1E"
        app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassengerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:inputType="textPersonName|textCapWords" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- SURCHARGE -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Surcharge (optional)"
        app:boxStrokeColor="#FF1744"
        app:startIconTint="#FF1744"
        app:prefixText="K"
        app:prefixTextColor="#FF1744"
        app:boxBackgroundColor="#1E1E1E">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassengerSurcharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#666666"
            android:text="Cancel"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF1744"
            android:text="Save"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>